	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "blink",
			"cargo": {
				"args": [
					"build",
					"--bin=blink",
					"--package=blink"
				],
				"filter": {
					"name": "blink",
					"kind": "bin"
				}
			},
			"args": ["../samples/","--output","../results"],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "blink verbose",
			"cargo": {
				"args": [
					"build",
					"--bin=blink",
					"--package=blink"
				],
				"filter": {
					"name": "blink",
					"kind": "bin"
				}
			},
			"args": ["../samples/","-v","--output","../results"],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'blink'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=blink",
					"--package=blink"
				],
				"filter": {
					"name": "blink",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}